
    <section>
      <div class="container mt-5">
        <div class="row">
          {{#each products}}
          <div class="col-md-3 p-3">
            <div class="card" style="width: 15rem; height:28rem">
              <img
                class="card-img-top"
                src="/product-images/{{this._id}}.jpg"
                alt="Card image cap"
                style="height: 18rem;"
              >
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">RS {{this.price}}</p>
                <a href="#" class="" style="padding: 10px;border-radius:20px;background-color:rgb(189, 189, 189);">Go somewhere</a>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </section>

    